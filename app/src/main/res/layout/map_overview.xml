<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/fab_margin_left"
            android:layout_marginBottom="@dimen/fab_margin_bottom"
            app:backgroundTint="@color/colorAccent"
            android:onClick="goToCreateEvent"
            app:fabSize="mini"/>
            <!--app:backgroundTint="#4286ed" -->
            <!--android:onClick="goToCreateEvent"/> -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:00PM"
        android:id="@+id/timeTextView"
        android:layout_above="@+id/timeSeekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:textColor="@color/colorSecondary"/>

    <SeekBar
            android:id="@+id/timeSeekBar"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="26dp"
            android:max="12"
            android:progressTint="@color/colorAccent"
            android:thumbTint="@color/colorAccent"
            android:progressBackgroundTint="@color/offwhite"
            android:visibility="invisible"/>


    <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:name="com.google.android.gms.maps.MapFragment"-->
        <!--android:id="@+id/map"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:layout_height="match_parent"-->
        <!--tools:layout="@layout/map_overview"-->
        <!--android:layout_width="match_parent" />-->

        <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map" />

</RelativeLayout>