<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profileLayout"
    tools:context=".Profile"
    android:visibility="visible"
    android:background="@color/colorDividerLight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">
        <!--android:paddingLeft="@dimen/profile_scrollview_horizontal_margin"
        android:paddingRight="@dimen/profile_scrollview_horizontal_margin">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimary"></LinearLayout>-->

            <!-- PROF PIC AND NAME -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_header"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilePicture"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/picture_background"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Isaac Wang"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:id="@+id/nameTextView"
                    android:textColor="@color/colorTextPrimary"/>

                <Button
                    android:id="@+id/btn_logout"
                    android:text="Log Out"
                    android:onClick="logoutUser"
                    android:textSize="15dp"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="false"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"

                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <!-- HOSTING BLOCK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_layout"
                android:id="@+id/eventsFullLayout"
                android:layout_marginTop="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:gravity=""
                    android:id="@+id/eventsTitleLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Hosting"
                        android:layout_marginLeft="20dip"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/myEventsTextView"
                        android:textAppearance="@style/ProfileHeaders" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:id="@+id/goToCreateEventButton"
                        android:onClick="goToCreateEvent"
                        android:layout_gravity="bottom"
                        android:text="Create"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@color/colorAccent"/>

                    <!--ImageButton
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/goToCreateEventButton"
                        android:onClick="goToCreateEvent"
                        android:src="@drawable/ic_actionbar_plus"
                        android:layout_marginLeft="5dip"
                        android:layout_marginBottom="10dp"
                        android:gravity="bottom"
                        android:background="@drawable/background_profile_circular_button"
                        android:elevation="5sp"/>-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyHostingTextContainer"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="You aren't hosting any events."
                        android:textSize="12sp"
                        android:lineSpacingExtra="10dp"
                        android:id="@+id/emptyHostingButton"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/eventsLayout"
                    android:gravity="center_horizontal">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_layout"
                android:id="@+id/attendingFullLayout"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:text="Joined"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dip"
                    android:id="@+id/myAttendingTextView"
                    android:textAppearance="@style/ProfileHeaders"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyAttendingTextContainer"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="You have no ongoing events."
                        android:textSize="12sp"
                        android:lineSpacingExtra="10dp"
                        android:id="@+id/emptyAttendingTextView"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/attendingLayout">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border_layout"
                android:id="@+id/trailsFullLayout"
                android:visibility="visible"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dip"
                    android:gravity=""
                    android:id="@+id/trailsTitleLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="Following"
                        android:layout_marginLeft="20dip"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/myTrailsTextView"
                        android:textAppearance="@style/ProfileHeaders" />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:id="@+id/goToAddTrailsButton"
                        android:onClick="goToAddTrails"
                        android:layout_gravity="bottom"
                        android:text="Search"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@color/colorAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emptyTrailsTextContainer"
                    android:background="@color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="You aren't following anyone yet."
                        android:textSize="12sp"
                        android:lineSpacingExtra="10dp"
                        android:id="@+id/emptyTrailsButton"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginTop="10dp"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/white"></LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trailsLayout"
                    android:layout_marginTop="0dp"
                    android:background="@color/white">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>


