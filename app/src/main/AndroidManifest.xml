        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ListAct"
            android:label="@string/title_activity_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>